<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">

    <ScrollView
        android:id="@+id/edit_scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="パパパン屋"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/shopImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shoppicture" />

            <Button
                android:id="@+id/editImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="店の写真を編集"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/newsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newsEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="お知らせを入力してください"
                android:inputType="textMultiLine|textPersonName" />

            <Button
                android:id="@+id/editNewsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ニュースを編集"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/menuText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/menuEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="商品情報を入力してください"
                android:inputType="textMultiLine|textPersonName" />

            <Button
                android:id="@+id/editMenuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="商品情報を編集"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/requestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="意見を見る"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>